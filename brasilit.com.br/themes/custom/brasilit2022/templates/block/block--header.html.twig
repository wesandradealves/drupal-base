{% block content %} 
    <header id="header">
        <div class="d-flex flex-wrap align-items-center container header-top ps-xs-3 pe-xs-3 ps-md-0 pe-md-0 pt-3 pb-3 pt-lg-2 pb-lg-2">
            <div class="d-flex align-items-center justify-content-lg-end order-lg-2 col-4 col-lg-auto">
                <div class="d-flex align-items-center justify-content-center ps-lg-3 pe-lg-3 rounded-1 produtos-btn">
                    <button onclick="this.classList.toggle('is-active')" class="hamburger hamburger--collapse p-0" type="button">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                    </button>
                    <p class="d-none d-lg-flex ps-2 produtos-btn--label">Produtos</p>
                    <div id="produtos-submenu" class="d-none p-3 rounded-5">
                        {{ drupal_view('produtos_navigation', 'block_1') }}
                    </div>
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-center order-lg-1 col-4 col-lg-auto">
                {% if logo %}
                    <a href="{{ path('<front>') }}" title="{{site_name}} {% if site_slogan %} - {{site_slogan}} {% endif %}" rel="home">
                        <img src="{{ logo }}" alt="{{site_name}}" />
                    </a>
                {% else %}
                    <a href="{{ path('<front>') }}" title="{{site_name}} {% if site_slogan %} - {{site_slogan}} {% endif %}" rel="home">{{ site_name }} - {{ site_slogan }}</a>
                {% endif %}
            </div>
            <div class="d-flex flex-grow-1 align-items-center justify-content-end order-3 col-4 flex-lg-fill ps-3">
                {{ drupal_region('header_search') }}
            </div>
        </div>
        <nav id="main-navigation" class="d-none d-lg-block">
            <div class="container">
                {{ drupal_region('primary_navigation') }}
            </div>
        </nav>
    </header>
{% endblock %}